{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "es2015.collection",
      "es2016",
      "es2017"
    ],
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowUnreachableCode": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ]
}